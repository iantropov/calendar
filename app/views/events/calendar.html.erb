<div class="page-header">
  <h1><%= t('views.event.events_for_year') %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= Event.human_attribute_name(:date) %></th>
      <th><%= t('views.common.link') %></th>
    </tr>
  </thead>
  <tbody>
    <% @calendar.each_with_index do |entry, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= entry[:date] %></td>
        <td><%= link_to entry[:event].name, user_event_path(current_user, entry[:event]) %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
