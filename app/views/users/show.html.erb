<%- model_class = User -%>
<div class="page-header">
  <h1><%= t('views.user.show') %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('views.common.back'), users_path, :class => 'btn' %>
  <%= link_to t('views.common.edit'), edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('views.common.destroy'), user_path(@user), :method => 'delete', :data => { :confirm => t('views.common.confirm') }, :class => 'btn btn-danger' %>
</div>
